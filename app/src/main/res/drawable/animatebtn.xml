<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/descriptionTextColor"
                android:endColor="@color/hintTextColor" android:angle="45">
            </gradient>
            <corners android:radius="9dp"/>
            <stroke android:width="2dp" android:color="@color/searchBarPrimaryColor"/>
        </shape>
    </item>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/fui_buttonShadow"
                android:endColor="@color/fui_buttonShadow"
                android:angle="45"/>
            <corners android:radius="9dp"
                android:bottomLeftRadius="9dp"
                android:bottomRightRadius="9dp"
                android:topLeftRadius="9dp"
                android:topRightRadius="9dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
            <stroke android:width="2dp"
                android:color="#F1F3F6"
                />
        </shape>
    </item>
</selector>